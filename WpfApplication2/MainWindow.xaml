                <Button>Dominik</Button>
                <Button>Paiha</Button>
                <Button>98765</Button>
                <TreeViewItem Header ="Employee1">
                    <Button>Jesper</Button>
                    <Button>Aaberg</Button>
                    <Button>12345</Button>
                </TreeViewItem>
            </TreeViewItem>
        </TreeView>
        <Button Click="ButtonBase_OnClick">Bu_tton</Button>
    </StackPanel>
</Window>
